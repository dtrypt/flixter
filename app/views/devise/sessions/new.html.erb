<div class="booyah-box col-xs-8 col-xs-offset-2 margin_top">
<br>
<h2>Log in</h2>
<br>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me , as: :boolean, class: 'pull-right', label: false, inline_label: true if devise_mapping.rememberable? %> 
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
  </div>
  <br>
<% end %>

<%= render "devise/shared/links" %>
<br>
</div>