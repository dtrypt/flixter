<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center"><%= @course.title %></h1>
  <br>
    <%= link_to 'Preview as Student', course_path(@course), class: 'btn btn-warning btn-sm' %>
    <br class="clr" />
  <div class="text-center">
    <%= link_to 'Add a new section', new_instructor_course_section_path(@course), class: 'btn btn-primary' %>
    </div>
    <br>

    <ul>
    <%= @course.sections.each do |section| %> <!--sections comes from the model -->
      <li>
        <%= section.title %>
        <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'pull-right btn btn-primary btn-xs' %>
        <ul>
          <% section.lessons.each do |lesson| %> <!--lessons comes from the model -->
          <li>
            <b><%= lesson.title %></b>
            -
            <%= lesson.subtitle %>
            </li>
            <% end %>
            </ul>

        <br class="clr" /><br>
      </li>
      <% end %>
    </ul>

</div>