<br />

  <h1 class="text-center">Temporary Instructor Course Page</h1>
  <h2 class="text-center">(shows all courses)</h2>
  <hr />

  <% @courses.each do |course| %>
  <div class="booyah-box col-xs-10 col-xs-offset-1">
    <h2 class="text-center"><%= link_to course.title, instructor_course_path(course) %></h2>
    <br>
      <%= image_tag course.image, class: 'img-responsive' %>
      <br>
    <div class="col-sm-8 col-xs-12">
    <%= course.description %>
    </div>
    <div class="col-sm-4 col-xs-12 text-center">
    <%= link_to 'Edit Course', instructor_course_path(course), class: 'btn btn-primary  btn-large' %>
    </div>
    <br class="clr" />
    <hr/>
    </div>
        <br class="clr" /><br>
  <% end %>