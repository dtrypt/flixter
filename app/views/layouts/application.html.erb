<!DOCTYPE html>
<html>
<head>
  <title>Flixter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <link href="//vjs.zencdn.net/5.11.7/video-js.css" rel="stylesheet">
  <script src="//vjs.zencdn.net/5.11.7/video.js"></script>
  <script src="//vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>

</head>
<body>

<div id="wrap">
    <!-- Navigation -->
    <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <%= link_to 'Flixter', root_path, class: 'navbar-brand' %>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav">
              <li><%= link_to 'See Courses', courses_path %></li>
              </ul>
                <ul class="nav navbar-nav pull-right">
                  <% if user_signed_in? %>
                    <li><%= link_to 'My Dashboard', dashboard_path %></li>
                    <li><%= link_to 'Intructor Course Page', instructor_courses_path %></li>
                    <li><%= link_to 'Currently logged in, log out?', destroy_user_session_path, method: :delete %></li>
                  <% else %>
                    <li><%= link_to 'Log in?', new_user_session_path %></li>
                    <li><%= link_to 'Sign up', new_user_registration_path %></li>
                  <% end %>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

<% if notice.present? %>
  <p class="alert alert-info"><%= notice %></p>
<% end %>
<% if alert.present? %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<%= yield %>
</div>

<br class="clr" />

<div id="footer">
  <div class="container">
      <div class="col-xs-12 col-sm-3">
        <b>Teachers</b>
        <br />
        <%= link_to 'Teach a Course', new_instructor_course_path %>
        <br />
        <%= link_to 'My Dashboard', dashboard_path %>
      </div>
      <div class="col-xs-12 col-sm-3">
        <b>About</b>
        <br />
        <%= link_to 'Team', '#' %>
        <br />
        <%= link_to 'Careers', '#' %>
        <br />
        <%= link_to 'Privacy Policy', privacy_path %>
      </div>
      <div class="col-xs-12 col-sm-3">
        <b>Contact</b>
        <br />
        russkranz@yahoo.com
        <br />
        Los Angeles, 90038
      </div>
      <div class="col-xs-12 col-sm-3 social">
        <b>Social</b>
      <%= link_to 'https://github.com/trustinruss' do %>
        <%= image_tag 'github.png', class: 'social-button' %>
      <% end %>
      <%= link_to 'https://www.facebook.com/russell.kranz' do %>
        <%= image_tag 'facebook.png', class: 'social-button' %>
      <% end %>
      <%= link_to 'https://twitter.com/RussellKranz' do %>
        <%= image_tag 'twitter.png', class: 'social-button' %>
      <% end %>
      </div>
  </div>
</div>

</body>
</html>
